      <buttons:SfButton HeightRequest="50" 
                        HorizontalOptions="StartAndExpand" 
                        BackgroundColor="LightYellow"  
                        VerticalOptions="Center" 
                        Clicked="OnbtPrimaryButtons999ClickedAsync">
