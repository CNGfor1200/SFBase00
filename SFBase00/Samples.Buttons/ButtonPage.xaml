                  <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="70"/>
                </On>
                <On Platform="iOS">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="70"/>
                </On>
              </OnPlatform>
            </RowDefinition.Height>
          </RowDefinition>
          <RowDefinition >
            <RowDefinition.Height>
              <OnPlatform x:TypeArguments="GridLength">
                <!--<On Platform="UWP">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="100" Tablet="140" Phone="70"/>
                </On>-->
                <On Platform="Android">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="70"/>
                </On>
                <On Platform="iOS">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="70"/>
                </On>
              </OnPlatform>
            </RowDefinition.Height>
          </RowDefinition>
          <RowDefinition >
            <RowDefinition.Height>
              <OnPlatform x:TypeArguments="GridLength">
                <!--<On Platform="UWP">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="100" Tablet="140" Phone="70"/>
                </On>-->
                <On Platform="Android">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="70"/>
                </On>
                <On Platform="iOS">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="140" Tablet="140" Phone="70"/>
                </On>
