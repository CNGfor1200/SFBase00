        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition>
            <ColumnDefinition.Width>
              <OnPlatform x:TypeArguments="GridLength">
                <On Platform="Android">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="170" Tablet="200" Phone="175" />
                </On>
                <On Platform="iOS">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="170" Tablet="200" Phone="175" />
                </On>
              </OnPlatform>
            </ColumnDefinition.Width>
          </ColumnDefinition>
          <ColumnDefinition>
            <ColumnDefinition.Width>
              <OnPlatform x:TypeArguments="GridLength">
                <On Platform="Android">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="170" Tablet="140" Phone="175" />
                </On>
                <On Platform="iOS">
                  <OnIdiom x:TypeArguments="GridLength" Desktop="170" Tablet="140" Phone="175" />
                </On>
              </OnPlatform>
            </ColumnDefinition.Width>
          </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- ================== -->
        <!-- Primary Button     -->
        <!-- ================== -->
        <StackLayout
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
          <syncfusion:SfButton x:Name="primaryButton"
                                         Text="Primary Button"
                                         WidthRequest="130"
                                         HeightRequest="40"
                                         CornerRadius="12" BackgroundColor="#1976D2" TextColor="#FFFFFF"
                               Clicked="OnbtPrimaryButtons000ClickedAsync"/>
        </StackLayout>
        <!-- ================== -->
        <!-- Normal Button      -->
        <!-- ================== -->
        <StackLayout Grid.Column="1"                                
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
          <syncfusion:SfButton x:Name="normalButton"
                                             Text="Normal Button"
                                             WidthRequest="130"
                                             HeightRequest="40"
                                             CornerRadius="12" BackgroundColor="#1976D2" TextColor="#FFFFFF"
                               Clicked="OnbtNormalButtons100ClickedAsync"/>
        </StackLayout>
        <!-- ================== -->
        <!-- Flat Button        -->
        <!-- ================== -->
        <StackLayout Grid.Row="1" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
          <syncfusion:SfButton x:Name="flatButton"
                                             Text="Flat Button"
                                             BorderWidth="0"
                                             WidthRequest="130"
                                             HeightRequest="40"
                                             TextColor="Accent"
                                             BackgroundColor="Transparent"
                                             CornerRadius="12" 
                               Clicked="OnbtPrimaryButtons200ClickedAsync"/>
        </StackLayout>
        <!-- ================== -->
        <!-- Outline Button     -->
        <!-- ================== -->
        <StackLayout Grid.Row="1"
                                 Grid.Column="1" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
          <syncfusion:SfButton x:Name="outlineButton"
                                             Text="Outline Button"
                                             WidthRequest="130"
                                             TextColor="Accent"
                                             HeightRequest="40"
                                             BackgroundColor="White"
                                             CornerRadius="12"
                                             BorderColor="Blue"
                               Clicked="OnbtPrimaryButtons300ClickedAsync">
            <syncfusion:SfButton.BorderWidth>
              <OnPlatform x:TypeArguments="x:Double">
                <On Platform="iOS" Value="2" />
                <On Platform="Android" Value="1" />
              </OnPlatform>
            </syncfusion:SfButton.BorderWidth>
          </syncfusion:SfButton>
        </StackLayout>
        <!-- ================== -->
        <!-- Left Icon Button   -->
        <!-- ================== -->
        <StackLayout Grid.Row="2" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center" >
          <syncfusion:SfButton x:Name="iconButtonLeft"
                                             ShowIcon="True"
                                             ImageSource="button_Heart.png"
                                             Text="#1 Icon Button "
                                             WidthRequest="130"
                                             HeightRequest="40"
                                             CornerRadius="12"
                               Clicked="OnbtPrimaryButtons400ClickedAsync"/>
        </StackLayout>
        <!-- ================== -->
        <!-- Right Icon Button  -->
        <!-- ================== -->
        <StackLayout Grid.Row="2"
                                 Grid.Column="1" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
          <syncfusion:SfButton x:Name="iconButtonRight"
                                             ShowIcon="True"
                                             HeightRequest="40"
                                             ImageSource="button_Heart.png"
                                             ImageAlignment="End"
                                             Text="# 2 Icon Button"
                                             CornerRadius="12"
                               Clicked="OnbtPrimaryButtons500ClickedAsync">
            <syncfusion:SfButton.WidthRequest>
              <OnPlatform x:TypeArguments="x:Double">
                <On Platform="iOS" Value="135" />
                <On Platform="Android" Value="130" />
              </OnPlatform>
            </syncfusion:SfButton.WidthRequest>
          </syncfusion:SfButton>
        </StackLayout>
        <!-- ========================== -->
        <!-- Edge Circular Icon Button  -->
        <!-- ========================== -->
        <StackLayout Grid.Row="3" 
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
          <syncfusion:SfButton x:Name="circleButton"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             HorizontalTextAlignment="Center"
                                             VerticalTextAlignment="Center"
                                             Text="&#xEB52;"
                                             BorderWidth="0"
                                             FontSize="20"
                                             WidthRequest="40"
                                             HeightRequest="40"
                                             CornerRadius="20" 
                               Clicked="OnbtPrimaryButtons600ClickedAsync">
            <syncfusion:SfButton.FontFamily>
              <OnPlatform x:TypeArguments="x:String">
                <On Platform="iOS" Value="Segoe MDL2 Assets" />
                <On Platform="Android" Value="button_Segoe MDL2 Assets.ttf#Segoe MDL2 Assets" />
              </OnPlatform>
            </syncfusion:SfButton.FontFamily>
          </syncfusion:SfButton>
        </StackLayout>
        <!-- =========================== -->
        <!-- Plain Circular Icon Button  -->
        <!-- =========================== -->
        <StackLayout Grid.Row="3"
                                 Grid.Column="1"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
          <syncfusion:SfButton x:Name="iconButton"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             HorizontalTextAlignment="Center"
                                             VerticalTextAlignment="Center"
                                             Text="&#xEB52;"
                                             BorderWidth="0"
                                             FontSize="16"
                                             WidthRequest="40"
                                             HeightRequest="40"
                                             CornerRadius="20"
                                             IsCheckable="true"
                                             TextColor="Black"
                                             BackgroundColor="Transparent"
                               
                                     PressedBackgroundColor="Transparent"
                                   Clicked="OnbtPrimaryButtons700ClickedAsync">
            <syncfusion:SfButton.FontFamily>
              <OnPlatform x:TypeArguments="x:String">
                <On Platform="iOS" Value="Segoe MDL2 Assets" />
                <On Platform="Android" Value="button_Segoe MDL2 Assets.ttf#Segoe MDL2 Assets" />
              </OnPlatform>
            </syncfusion:SfButton.FontFamily>
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Checked" >
                  <VisualState.Setters>
                    <Setter Property="TextColor" Value="Accent"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Unchecked">
                  <VisualState.Setters>
                    <Setter Property="TextColor" Value="Black" />
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </syncfusion:SfButton>
        </StackLayout>
        <!-- ================== -->
        <!-- Linear Gradient Button  -->
        <!-- ================== -->
        <StackLayout Grid.Row="4" Grid.Column="0"
                             HorizontalOptions="Center" 
                             VerticalOptions="Center">
          <syncfusion:SfButton Text="Linear Gradient"
                                         WidthRequest="120"
                                         HeightRequest="40"
                                         CornerRadius="20"
                                         IsCheckable="True"
                               Clicked="OnbtPrimaryButtons800ClickedAsync">
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Checked" >
                  <VisualState.Setters>
                    <Setter Property="BackgroundGradient">
                      <Setter.Value>
                        <gradient:SfLinearGradientBrush>
                          <gradient:SfLinearGradientBrush.GradientStops>
                            <gradient:SfGradientStop Color="#51F1F2" Offset="0"/>
                            <gradient:SfGradientStop Color="#2F9BDF" Offset="1"/>
                          </gradient:SfLinearGradientBrush.GradientStops>
                        </gradient:SfLinearGradientBrush>
                      </Setter.Value>
                    </Setter>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Unchecked">
                  <VisualState.Setters>
                    <Setter Property="BackgroundGradient">
                      <Setter.Value>
                        <gradient:SfLinearGradientBrush>
                          <gradient:SfLinearGradientBrush.GradientStops>
                            <gradient:SfGradientStop Color="#2F9BDF" Offset="0"/>
                            <gradient:SfGradientStop Color="#51F1F2" Offset="1"/>
                          </gradient:SfLinearGradientBrush.GradientStops>
                        </gradient:SfLinearGradientBrush>
                      </Setter.Value>
                    </Setter>
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </syncfusion:SfButton>
        </StackLayout>
        <!-- ========================= -->
        <!-- Circular Gradient Button  -->
        <!-- ========================= -->
        <StackLayout Grid.Row="4" Grid.Column="1"
                             HorizontalOptions="Center" 
                             VerticalOptions="Center">
          <syncfusion:SfButton Text="Radial Gradient"
                                         WidthRequest="120"
                                         HeightRequest="40"
                                         CornerRadius="20"
                                         IsCheckable="True"
                               Clicked="OnbtPrimaryButtons900ClickedAsync">
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Checked" >
                  <VisualState.Setters>
                    <Setter Property="BackgroundGradient">
                      <Setter.Value>
                        <gradient:SfRadialGradientBrush Radius="1.5">
                          <gradient:SfRadialGradientBrush.GradientStops>
                            <gradient:SfGradientStop Color="#FF5361" Offset="0.3"/>
                            <gradient:SfGradientStop Color="#FFB57B" Offset="1"/>
                          </gradient:SfRadialGradientBrush.GradientStops>
                        </gradient:SfRadialGradientBrush>
                      </Setter.Value>
                    </Setter>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Unchecked">
                  <VisualState.Setters>
                    <Setter Property="BackgroundGradient">
                      <Setter.Value>
                        <gradient:SfRadialGradientBrush Radius="1">
                          <gradient:SfRadialGradientBrush.GradientStops>
                            <gradient:SfGradientStop Color="#FFB57B" Offset="0"/>
                            <gradient:SfGradientStop Color="#FF5361" Offset="1"/>
                          </gradient:SfRadialGradientBrush.GradientStops>
                        </gradient:SfRadialGradientBrush>
                      </Setter.Value>
                    </Setter>
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </syncfusion:SfButton>
        </StackLayout>
      </Grid>
    </ScrollView>
    <!-- ================== -->
