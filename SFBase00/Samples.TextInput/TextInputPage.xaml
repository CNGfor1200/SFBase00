  <!--<ContentPage.BindingContext>
    <sftextinputlayout:SignUpViewModel x:Name="signUpViewModel" />
  </ContentPage.BindingContext>-->
  <StackLayout>
    <!-- Place new controls here -->
    <Label Text="Syncfusion - Text Input" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" FontSize="Body" HeightRequest="20" HorizontalTextAlignment="Center" TextColor="#000000" />
    <ScrollView Margin="0,20,0,20" Padding="0,0,0,20">
      <ScrollView.HorizontalOptions>
        <OnIdiom
                    x:TypeArguments="LayoutOptions"
                    Desktop="Center"
                    Phone="FillAndExpand"
                    Tablet="FillAndExpand" />
      </ScrollView.HorizontalOptions>
      <ScrollView.WidthRequest>
        <OnIdiom x:TypeArguments="x:Double" Desktop="400" />
      </ScrollView.WidthRequest>
      <StackLayout Margin="0,0,20,20" Spacing="10">
        <!-- ================================= -->
        <!-- Name  //  enter your name         -->
        <!-- ================================= -->
        <inputLayout:SfTextInputLayout
                    x:Name="nameLayout"
                    ContainerType="Filled"
                    InputViewPadding="5"
                    ErrorText="Enter your name"
                    HasError="{Binding IsNameEmpty}"
                    HelperText="Enter your name"
                    Hint="Name"
                    IsHintAlwaysFloated="{Binding EnableHintAlwaysFloated}"
                    LeadingViewPosition="Outside">
          <inputLayout:SfTextInputLayout.HintLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
          </inputLayout:SfTextInputLayout.HintLabelStyle>
          <inputLayout:SfTextInputLayout.HelperLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.HelperLabelStyle>
          <inputLayout:SfTextInputLayout.ErrorLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.ErrorLabelStyle>
          <Entry x:Name="name" Text="{Binding Name}" />
          <inputLayout:SfTextInputLayout.LeadingView>
            <Label
                            FontSize="18"
                            Text="F"
                            TextColor="{Binding Path=CurrentActiveColor, Source={x:Reference Name=nameLayout}}"
                            VerticalTextAlignment="Center">
              <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                  <On Platform="iOS" Value="InputLayoutIcons" />
                  <On Platform="Android" Value="InputLayoutIcons.ttf#InputLayoutIcons" />
                  <On Platform="UWP" Value="/Assets/Fonts/InputLayoutIcons.ttf#InputLayoutIcons" />
                </OnPlatform>
              </Label.FontFamily>
            </Label>
          </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>
        <!-- ================================= -->
        <!-- Phone Number  //  dont include .. -->
        <!-- ================================= -->
        <inputLayout:SfTextInputLayout
                    x:Name="mobileLayout"
                    Grid.Row="0"
                    Grid.Column="0"
                    ContainerType="Filled"
                    InputViewPadding="5"
                    ErrorText="Enter your phone number"
                    HasError="{Binding IsMobileNumberEmpty}"
                    HelperText="Don't include country code"
                    Hint="Phone number"
                    IsHintAlwaysFloated="{Binding EnableHintAlwaysFloated}"
                    LeadingViewPosition="Outside">
          <inputLayout:SfTextInputLayout.HintLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
          </inputLayout:SfTextInputLayout.HintLabelStyle>
          <inputLayout:SfTextInputLayout.HelperLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.HelperLabelStyle>
          <inputLayout:SfTextInputLayout.ErrorLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.ErrorLabelStyle>
          <Entry
                        x:Name="phoneNumber"
                        Keyboard="Telephone"
                        Text="{Binding PhoneNumber}" />
          <inputLayout:SfTextInputLayout.LeadingView>
            <Label
                            FontSize="18"
                            Text="E"
                            TextColor="{Binding Path=CurrentActiveColor, Source={x:Reference Name=mobileLayout}}"
                            VerticalTextAlignment="Center">
              <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                  <On Platform="iOS" Value="InputLayoutIcons" />
                  <On Platform="Android" Value="InputLayoutIcons.ttf#InputLayoutIcons" />
                  <On Platform="UWP" Value="/Assets/Fonts/InputLayoutIcons.ttf#InputLayoutIcons" />
                </OnPlatform>
              </Label.FontFamily>
            </Label>
          </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>
        <!-- ================================= -->
        <!-- Address  //  enter address        -->
        <!-- ================================= -->
        <inputLayout:SfTextInputLayout
                    x:Name="addressLayout"
                    ContainerType="Filled"
                    InputViewPadding="5"
                    ErrorText="Enter your address"
                    HasError="{Binding IsAddressEmpty}"
                    HelperText="Enter your address"
                    Hint="Address"
                    IsHintAlwaysFloated="{Binding EnableHintAlwaysFloated}"
                    LeadingViewPosition="Outside">
          <inputLayout:SfTextInputLayout.HintLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
          </inputLayout:SfTextInputLayout.HintLabelStyle>
          <inputLayout:SfTextInputLayout.HelperLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.HelperLabelStyle>
          <inputLayout:SfTextInputLayout.ErrorLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.ErrorLabelStyle>
          <Editor
                        x:Name="address"
                        AutoSize="TextChanges"
                        Text="{Binding Address}" />
          <inputLayout:SfTextInputLayout.LeadingView>
            <Label
                            FontSize="18"
                            Text="C"
                            TextColor="{Binding Path=CurrentActiveColor, Source={x:Reference Name=addressLayout}}"
                            VerticalTextAlignment="Center">
              <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                  <On Platform="iOS" Value="InputLayoutIcons" />
                  <On Platform="Android" Value="InputLayoutIcons.ttf#InputLayoutIcons" />
                  <On Platform="UWP" Value="/Assets/Fonts/InputLayoutIcons.ttf#InputLayoutIcons" />
                </OnPlatform>
              </Label.FontFamily>
            </Label>
          </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>
        <!-- ================================= -->
        <!-- State  //  enter your state       -->
        <!-- ================================= -->
        <inputLayout:SfTextInputLayout
                    x:Name="stateLayout"
                    ContainerType="Filled"
                    InputViewPadding="5"
                    ErrorText="Enter your state"
                    HasError="{Binding IsStateEmpty}"
                    HelperText="Enter your state"
                    Hint="State"
                    IsHintAlwaysFloated="{Binding EnableHintAlwaysFloated}"
                    LeadingViewPosition="Outside">
          <inputLayout:SfTextInputLayout.HintLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
          </inputLayout:SfTextInputLayout.HintLabelStyle>
          <inputLayout:SfTextInputLayout.HelperLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.HelperLabelStyle>
          <inputLayout:SfTextInputLayout.ErrorLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.ErrorLabelStyle>
          <autoComplete:SfAutoComplete
                        x:Name="state"
                        DataSource="{Binding State}"
                        HighlightedTextColor="#0d5fa3"
                        SuggestionMode="Contains"
                        Text="{Binding SelectedState}"
                        TextHighlightMode="FirstOccurrence">
              <autoComplete:SfAutoComplete.HeightRequest>
                <OnPlatform
                                x:TypeArguments="x:Double"
                                Android="60"
                                WinPhone="57"
                                iOS="21" />
              </autoComplete:SfAutoComplete.HeightRequest>
            </autoComplete:SfAutoComplete>
          <inputLayout:SfTextInputLayout.LeadingView>
            <Label
                            FontSize="18"
                            Text="C"
                            TextColor="{Binding Path=CurrentActiveColor, Source={x:Reference Name=stateLayout}}"
                            VerticalTextAlignment="Center">
              <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                  <On Platform="iOS" Value="InputLayoutIcons" />
                  <On Platform="Android" Value="InputLayoutIcons.ttf#InputLayoutIcons" />
                  <On Platform="UWP" Value="/Assets/Fonts/InputLayoutIcons.ttf#InputLayoutIcons" />
                </OnPlatform>
              </Label.FontFamily>
            </Label>
          </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>
        <!-- ================================= -->
        <!-- Email  //  enter your email ..    -->
        <!-- ================================= -->
        <inputLayout:SfTextInputLayout
                    x:Name="mailLayout"
                    ContainerType="Filled"
                    InputViewPadding="5"
                    ErrorText="Enter a valid email address"
                    HasError="{Binding HasError}"
                    HelperText="Enter your email address"
                    Hint="Email"
                    IsHintAlwaysFloated="{Binding EnableHintAlwaysFloated}"
                    LeadingViewPosition="Outside">
          <inputLayout:SfTextInputLayout.HintLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
          </inputLayout:SfTextInputLayout.HintLabelStyle>
          <inputLayout:SfTextInputLayout.HelperLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.HelperLabelStyle>
          <inputLayout:SfTextInputLayout.ErrorLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.ErrorLabelStyle>
          <Entry x:Name="mail" Text="{Binding Mail}" />
          <inputLayout:SfTextInputLayout.LeadingView>
            <Label
                            FontSize="18"
                            Text="G"
                            TextColor="{Binding Path=CurrentActiveColor, Source={x:Reference Name=mailLayout}}"
                            VerticalTextAlignment="Center">
              <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                  <On Platform="iOS" Value="InputLayoutIcons" />
                  <On Platform="Android" Value="InputLayoutIcons.ttf#InputLayoutIcons" />
                  <On Platform="UWP" Value="/Assets/Fonts/InputLayoutIcons.ttf#InputLayoutIcons" />
                </OnPlatform>
              </Label.FontFamily>
            </Label>
          </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>
        <!-- ================================= -->
        <!-- Password  //  enter 5 to 8 ..     -->
        <!-- ================================= -->
        <inputLayout:SfTextInputLayout
                    x:Name="passwordLayout"
                    CharMaxLength="8"
                    ContainerType="Filled"
                    InputViewPadding="5"
                    EnablePasswordVisibilityToggle="true"
                    ErrorText="Enter 5 to 8 characters"
                    HasError="{Binding IsPasswordEmpty}"
                    HelperText="Enter 5 to 8 characters"
                    Hint="Password"
                    IsHintAlwaysFloated="{Binding EnableHintAlwaysFloated}"
                    ShowCharCount="true">
          <inputLayout:SfTextInputLayout.HintLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
          </inputLayout:SfTextInputLayout.HintLabelStyle>
          <inputLayout:SfTextInputLayout.HelperLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.HelperLabelStyle>
          <inputLayout:SfTextInputLayout.ErrorLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.ErrorLabelStyle>
          <inputLayout:SfTextInputLayout.CounterLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
          </inputLayout:SfTextInputLayout.CounterLabelStyle>
          <Entry
                        x:Name="password"
                        IsPassword="true"
                        Text="{Binding Password}" />
          <inputLayout:SfTextInputLayout.LeadingView>
            <Label
                            FontSize="18"
                            Text="K"
                            TextColor="{Binding Path=CurrentActiveColor, Source={x:Reference Name=passwordLayout}}"
                            VerticalTextAlignment="Center">
              <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                  <On Platform="iOS" Value="InputLayoutIcons" />
                  <On Platform="Android" Value="InputLayoutIcons.ttf#InputLayoutIcons" />
                  <On Platform="UWP" Value="/Assets/Fonts/InputLayoutIcons.ttf#InputLayoutIcons" />
                </OnPlatform>
              </Label.FontFamily>
            </Label>
          </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>
        <!-- ================================= -->
        <!-- Confirm Password  //  .. ..       -->
        <!-- ================================= -->
        <inputLayout:SfTextInputLayout
                    x:Name="confirmPasswordLayout"
                    ContainerType="Filled"
                    InputViewPadding="5"
                    ErrorText="Re-enter your password"
                    HasError="{Binding IsConfirmPasswordEmpty}"
                    HelperText="Re-enter your password"
                    Hint="Confirm password"
                    IsEnabled="{Binding IsEnabled}"
                    IsHintAlwaysFloated="{Binding EnableHintAlwaysFloated}">
          <inputLayout:SfTextInputLayout.HintLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
          </inputLayout:SfTextInputLayout.HintLabelStyle>
          <inputLayout:SfTextInputLayout.HelperLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.HelperLabelStyle>
          <inputLayout:SfTextInputLayout.ErrorLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.ErrorLabelStyle>
          <Entry
                        x:Name="confirmPassword"
                        IsPassword="true"
                        Text="{Binding ConfirmPassword}" />
          <inputLayout:SfTextInputLayout.LeadingView>
            <Label
                            FontSize="18"
                            Text="K"
                            TextColor="{Binding Path=CurrentActiveColor, Source={x:Reference Name=confirmPasswordLayout}}"
                            VerticalTextAlignment="Center">
              <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                  <On Platform="iOS" Value="InputLayoutIcons" />
                  <On Platform="Android" Value="InputLayoutIcons.ttf#InputLayoutIcons" />
                  <On Platform="UWP" Value="/Assets/Fonts/InputLayoutIcons.ttf#InputLayoutIcons" />
                </OnPlatform>
              </Label.FontFamily>
            </Label>
          </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>
        <!-- ================================= -->
        <!-- Birthday  //  .. ..               -->
        <!-- ================================= -->
        <Grid>
          <inputLayout:SfTextInputLayout
                        x:Name="birthdayLayout"
                        ContainerType="Filled"
                        InputViewPadding="5"
                        HelperText="Enter your date of birth"
                        Hint="Birth date"
                        IsHintAlwaysFloated="{Binding EnableHintAlwaysFloated}"
                        LeadingViewPosition="Outside"
                        TrailingViewPosition="Inside">
            <inputLayout:SfTextInputLayout.HintLabelStyle>
              <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
            </inputLayout:SfTextInputLayout.HintLabelStyle>
            <inputLayout:SfTextInputLayout.HelperLabelStyle>
              <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
            </inputLayout:SfTextInputLayout.HelperLabelStyle>
            <inputLayout:SfTextInputLayout.ErrorLabelStyle>
              <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
            </inputLayout:SfTextInputLayout.ErrorLabelStyle>
            <Entry x:Name="dateOfBirth" Text="{Binding DateOfBirth}" />
            <inputLayout:SfTextInputLayout.LeadingView>
              <Label
                                FontSize="18"
                                Text="H"
                                TextColor="{Binding Path=CurrentActiveColor, Source={x:Reference Name=birthdayLayout}}"
                                VerticalTextAlignment="Center">
                <Label.FontFamily>
                  <OnPlatform x:TypeArguments="x:String">
                    <On Platform="iOS" Value="InputLayoutIcons" />
                    <On Platform="Android" Value="InputLayoutIcons.ttf#InputLayoutIcons" />
                    <On Platform="UWP" Value="/Assets/Fonts/InputLayoutIcons.ttf#InputLayoutIcons" />
                  </OnPlatform>
                </Label.FontFamily>
              </Label>
            </inputLayout:SfTextInputLayout.LeadingView>
            <inputLayout:SfTextInputLayout.TrailingView>
              <Label
                                FontSize="18"
                                Text="D"
                                TextColor="{Binding Path=CurrentActiveColor, Source={x:Reference Name=birthdayLayout}}"
                                VerticalTextAlignment="Center">
                <Label.GestureRecognizers>
                  <!--<TapGestureRecognizer x:Name="labelGesture" Tapped="GestureRecognizer_Tapped" />-->
                </Label.GestureRecognizers>
                <Label.FontFamily>
                  <OnPlatform x:TypeArguments="x:String">
                    <On Platform="iOS" Value="InputLayoutIcons" />
                    <On Platform="Android" Value="InputLayoutIcons.ttf#InputLayoutIcons" />
                    <On Platform="UWP" Value="/Assets/Fonts/InputLayoutIcons.ttf#InputLayoutIcons" />
                  </OnPlatform>
                </Label.FontFamily>
              </Label>
            </inputLayout:SfTextInputLayout.TrailingView>
          </inputLayout:SfTextInputLayout>
          <DatePicker
                        x:Name="date_Picker"
                        Opacity="0"
                        VerticalOptions="CenterAndExpand" />
        </Grid>
        <!-- ================================= -->
        <!-- Notes  //  .. ..                  -->
        <!-- ================================= -->
        <inputLayout:SfTextInputLayout
                    x:Name="notesLayout"
                    CharMaxLength="50"
                    ContainerType="Filled"
                    InputViewPadding="5"
                    Hint="Notes"
                    IsHintAlwaysFloated="{Binding EnableHintAlwaysFloated}"
                    LeadingViewPosition="Outside"
                    ShowCharCount="True">
          <inputLayout:SfTextInputLayout.HintLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Small"/>
          </inputLayout:SfTextInputLayout.HintLabelStyle>
          <inputLayout:SfTextInputLayout.CounterLabelStyle>
            <inputLayout:LabelStyle
                            FontAttributes="None"
                            FontSize="Micro"/>
          </inputLayout:SfTextInputLayout.CounterLabelStyle>
          <Editor
                        x:Name="notes"
                        HeightRequest="80"
                        Text="{Binding Notes}" />
          <inputLayout:SfTextInputLayout.LeadingView>
            <Label
                            FontSize="18"
                            Text="B"
                            TextColor="{Binding Path=CurrentActiveColor, Source={x:Reference Name=notesLayout}}"
                            VerticalTextAlignment="Center">
              <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                  <On Platform="iOS" Value="InputLayoutIcons" />
                  <On Platform="Android" Value="InputLayoutIcons.ttf#InputLayoutIcons" />
                  <On Platform="UWP" Value="/Assets/Fonts/InputLayoutIcons.ttf#InputLayoutIcons" />
                </OnPlatform>
              </Label.FontFamily>
            </Label>
          </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>
        <StackLayout
                    Padding="25,0,0,0"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
          <Button
                        x:Name="submitButton"
                        BackgroundColor="#0d5fa3"
                        Command="{Binding SubmitCommand}"
                        CommandParameter="{Binding Source={x:Reference state}, Path=Text}"
                        Text="Submit"
                        TextColor="White"
                        WidthRequest="100" />
          <Button
                        x:Name="resetButton"
                        Margin="10,0,0,0"
                        BackgroundColor="#90979b"
                        Command="{Binding ResetCommand}"
                        CommandParameter="{Binding Source={x:Reference state}}"
                        Text="Reset"
                        TextColor="White"
                        WidthRequest="100" />
        </StackLayout>
      </StackLayout>
    </ScrollView>
